#include <Wire.h>
#include "rgb_lcd.h"

rgb_lcd lcd;

void setup()  {
  // LCD
     // set up the LCD's number of columns and rows:
    lcd.begin(16, 2);

    delay(1000);
    
  // Sensor
    Serial.begin(9600);
    pinMode(6,INPUT);
}
void loop()  {
    while(1)  {
        delay(500);
        lcd.clear();
        if(digitalRead(6)==LOW)  {
            Serial.println("Detected :D");
            lcd.print("Detected");
            lcd.setRGB(255, 0, 0);
        }
        else  {
            Serial.println("Nobody");
            lcd.print("Unlocked");
            lcd.setRGB(0, 0, 255);
        }
    }
}
